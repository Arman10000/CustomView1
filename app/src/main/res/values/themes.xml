<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CustomView1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        //подключили стиль по умольчанию для нашего View
        <item name="bottomButtonsStyle">@style/DefaultMyButtonsStyle</item>
    </style>

    //создали стиль по умольчанию для нашего View
    <style name="DefaultMyButtonsStyle">
        <item name="bottomPositiveBackgroundColor">#00BCD4</item>
    </style>

    //для desStyleRes стиль по умольчанию для нашего View
    <style name="MyBottomButtonsStyle">
        <item name="bottomPositiveBackgroundColor">#00BCD4</item>
    </style>
</resources>